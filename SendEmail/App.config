<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  <appSettings>
    <add key="isGmailAccount" value="false" />

    <add key="email" value="yourEmail" />
    <add key="password" value="yourPassword" />
    <add key="destinationEmail" value="destEmail" />

    <add key="emailSubject" value="A Subject for the Email" />

    <!-- In case of isGmailAccount == "false" -->
    <add key="host" value="yourHost" />
    <add key="port" value="25" />
  </appSettings>
</configuration>
